all:: libfx2.so

#PREF=powerpc-linux-
CC=$(PREF)gcc
STRIP=$(PREF)strip
CDEBUGFLAGS=-g -O2 -Wall -pedantic -DUSEX
INCLUDES=-I.
OBJS=draw.o rcinput.o pig.o

libfx2.so: $(OBJS)
	$(CC) -o libfx2.so -shared -Wl,-soname,libfx2.so $(OBJS)
	$(STRIP) libfx2.so

InstallMultipleFlags(libfx2.so,../../../lib,-m 755)

clean::
	rm -f libfx2.so
