<html>
	<head>
		<title>Streaming Server Settings</title>
		<link rel="stylesheet" type="text/css" href="webif.css">
		<script>
			function submitSettings()
			{
				var transcodeAudio = "off";
				if (document.f1.forcetranscodeaudio.checked)
					transcodeAudio = "on";
				var transcodeVideo = "off";
				if (document.f1.forcetranscodevideo.checked)
					transcodeVideo = "on";
				var parms = "ip=" + document.f1.ip.value + "&port=" + document.f1.port.value + "&dvddrive=" + document.f1.dvddrive.value + "&forcetranscodevideo=" + transcodeVideo + "&videodatarate=" + document.f1.videodatarate.value + "&resolution=" + document.f1.resolution.value + "&mpegcodec=" + document.f1.mpegcodec.value + "&forcetranscodeaudio=" + transcodeAudio + "&audiodatarate=" + document.f1.audiodatarate.value;
				document.location = "/cgi-bin/setStreamingServerSettings?" + parms;
				setTimeout("window.close()", 500);
			}
		</script>
	</head>
	<body id="streamingserver">
		<form name="f1" action="/cgi-bin/setStreamingServerSettings">
			<table border="0" cellpadding="0" cellspacing="10">
			<tbody>
				<tr>
					<td colspan="2"><b>Streaming Server</b></td>
				</tr>
				<tr>
					<td>Server IP:</td>
					<td>
						<input name="ip" type="text" size="15" maxlength="15" value="#IP#" style="color: #000000">
					</td>
				</tr>
				<tr>
					<td>Server Port:</td>
					<td>
						<input name="port" type="text" size="5" maxlength="5" value="#PORT#" style="color: #000000">
					</td>
				</tr>
				<tr>
					<td>DVD Drive Letter:</td>
					<td>
						<input name="dvddrive" type="text" value="#DVDDRIVE#" style="color: #000000">
					</td>
				</tr>
				<tr>
					<td colspan="2">&nbsp;</td>
				</tr>
				<tr>
					<td colspan="2"><b>Video Stream</b></td>
				</tr>
				<tr>
					<td>Transcode Video:</td>
					<td>
						<input type="checkbox" name="forcetranscodevideo" value="on" #FORCETRANSCODEVIDEO#>
					</td>
				</tr>
				<tr>
					<td>Datarate:</td>
					<td>
						<input name="videodatarate" type="text" size="5" maxlength="5" value="#VIDEODATARATE#" style="color: #000000">
					</td>
				</tr>
				<tr>
					<td>Resolution:</td>
					<td>
						<select name="resolution" size="1">
							<option value="0" #RES0#>352 x 288</option>
							<option value="1" #RES1#>352 x 576</option>
							<option value="2" #RES2#>480 x 576</option>
							<option value="3" #RES3#>704 x 576</option>
						</select>
					</td>
				</tr>
				<tr>
					<td>MPEG Codec:</td>
					<td>
						<select name="mpegcodec" size="1">
							<option value="1" #CODEC1#>MPEG1</option>
							<option value="2" #CODEC2#>MPEG2</option>
						</select>
					</td>
				</tr>
				<tr>
					<td colspan="2">&nbsp;</td>
				</tr>
				<tr>
					<td colspan="2"><b>Audio Stream</b></td>
				</tr>
				<tr>
					<td>Transcode Audio:</td>
					<td>
						<input type="checkbox" name="forcetranscodeaudio" value="on" #FORCETRANSCODEAUDIO#>
					</td>
				</tr>
				<tr>
					<td>Audio Datarate:</td>
					<td>
						<input name="audiodatarate" type="text" size="5" maxlength="5" value="#AUDIODATARATE#" style="color: #000000">
					</td>
				</tr>
				<tr>
					<td colspan="2">&nbsp;</td>
				</tr>
				<tr>
					<td colspan="2">
						<input type="button" name="Change" onClick="javascript:submitSettings()" value="Change" style="width: 100px; color: #000000;">
					</td>
				</tr>
			</tbody>
			</table>
		</form>
	</body>
</html>
