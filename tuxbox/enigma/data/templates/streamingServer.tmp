<head>
	<script language="javascript" type="text/javascript" src="/window.js"></script>
	<script language="javascript">
	function playFile()
	{
		document.location =  "/cgi-bin/movieplayer.pls?command=start&mrl=" + document.form1.mrl.value;
	}
	function playDVD()
	{
		var parms = ":";
		if (document.form1.title1.value > 0)
			parms = ":@" + document.form1.title1.value + ":" + document.form1.chapter1.value + "-";
		document.location = "/cgi-bin/movieplayer.pls?command=start&mrl=dvdsimple:" + document.form1.drive1.value + parms;
	}
	function playVCD()
	{
		var parms = ":";
		if (document.form1.title2.value > 0)
			parms = ":@" + document.form1.title2.value + ":" + document.form1.chapter2.value + "-";
		document.location = "/cgi-bin/movieplayer.pls?command=start&mrl=vcd:" + document.form1.drive2.value + parms;
	}
	function settings()
	{
		NewWindow('/cgi-bin/streamingServerSettings', 'streamingserver', '780', '600', 'yes');
	}
	function stopStreaming()
	{
		document.location =  "/cgi-bin/movieplayer?command=stop";
	}
	function init()
	{
		if (parent.leftnavi)
			parent.leftnavi.location.reload();
	}
	</script>
</head>
