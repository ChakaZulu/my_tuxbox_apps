<html>
<head>
	<script language="JavaScript">
	function playFile()
	{
		document.location =  "/cgi-bin/movieplayer.pls?mrl=" + document.form1.mrl.value;
	}
	function playDVD()
	{
		document.location = "/cgi-bin/movieplayer.pls?mrl=dvdsimple:" + document.form1.drive.value + ":@1:1";
	}
	function playVCD()
	{
		document.location = "/cgi-bin/movieplayer.pls?mrl=vcd:" + document.form1.drive.value + ":@1:1";
	}
	</script>
</head>
<body>
	<form name="form1">
		<input type="button" style="width: 100; height: 22" onClick="playFile()" value="File">
		&nbsp;
		<input type="file" size="40" height="22" name="mrl">
		<br><br>
		<input type="button" style="width: 100; height: 22" onClick="playDVD()" value="DVD">
		&nbsp;Drive:&nbsp;
		<input type="text" name="drive" value="#DRIVE#" size="1" readonly>
		<br><br>
		<input type="button" style="width: 100; height: 22" onClick="playVCD()" value="(S)VCD">
		&nbsp;Drive:&nbsp;
		<input type="text" name="drive" value="#DRIVE#" size="1" readonly>
	</form>
</body>
</html> 
